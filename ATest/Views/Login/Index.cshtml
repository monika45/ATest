
@{
    ViewData["title"] = "登录";
}

<div id="login-pannel">
    <div class="jumbotron">
        <form asp-controller="Login" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" role="form" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="username">用户名</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="username" name="username">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="password">密码</label>
                <div class="col-sm-12">
                    <input type="password" class="form-control" id="password" name="password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" id="submit" class="btn btn-warning pull-right">登录</button>
                </div>
            </div>
        </form>
    </div>
</div>


